<%- include("partials/header") %>
<% if (message) { %>
        <p class="<%= message.type %>"><%= message.message %></p>
    <% } %>

<div class="row col-lg-6 offset-lg-3 mt-5 border rounded border-black p-3">
        <h1 class="align-middle">Login</h1>
<form action="/login" method="post">
        <div class="form-group mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="username" id="username" name="username"/>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password"/>
        </div>
        <button class="col-auto align-middle btn btn-outline-success me-3" type="submit">Login</button>
        <a href="/register">register</a>
</form>
</div>
</body>
</html>